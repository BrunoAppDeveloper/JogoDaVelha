<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/center"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       />

    <ImageView
        android:id="@+id/centerStart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="56dp"
        android:background="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/center"
        />

    <ImageView
        android:id="@+id/centerEnd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="56dp"
        android:background="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/center"
        />

    <ImageView
        android:id="@+id/topCenter"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="56dp"
        android:background="#333333"
        app:layout_constraintBottom_toTopOf="@id/center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/bottomCenter"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:background="#333333"
        app:layout_constraintTop_toBottomOf="@id/center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <ImageView
        android:id="@+id/topEnd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="56dp"
        android:background="#333333"
        app:layout_constraintEnd_toEndOf="@id/centerEnd"
        app:layout_constraintBottom_toTopOf="@id/centerEnd"

        />

    <ImageView
        android:id="@+id/topStart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="56dp"
        android:layout_marginStart="6dp"

        android:background="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/topCenter"
        app:layout_constraintBottom_toTopOf="@id/centerStart"

        />

    <ImageView
        android:id="@+id/bottomStart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="56dp"
        android:background="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bottomCenter"
        app:layout_constraintTop_toBottomOf="@id/centerStart"
        />

    <ImageView
        android:id="@+id/bottomEnd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:background="#333333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bottomCenter"
        app:layout_constraintStart_toTopOf="@id/bottomCenter"


        app:layout_constraintTop_toBottomOf="@id/centerEnd" />



</androidx.constraintlayout.widget.ConstraintLayout>